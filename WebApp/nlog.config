<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="..\webapp-internal-nlog.txt">

	<!-- Определяем целевые места для логирования -->
	<targets>
		<!-- Логирование в файл с ротацией по дате -->
		<target xsi:type="File"
				name="allfile"
				fileName="${basedir}/logs/${shortdate}.log"
				layout="${longdate} ${level:uppercase=true} ${logger} ${message} ${exception:format=tostring}" />

		<!-- Логирование только ошибок в отдельный файл -->
		<target xsi:type="File"
				name="errorfile"
				fileName="${basedir}/logs/errors-${shortdate}.log"
				layout="${longdate} ${level:uppercase=true} ${logger} ${message} ${exception:format=tostring}"
				filter="level >= LogLevel.Error" />

		<!-- Вывод в консоль для разработки - ТОЛЬКО WARNING и ERROR -->
		<target xsi:type="ColoredConsole"
				name="console"
				layout="${longdate} ${level:uppercase=true} ${logger} ${message} ${exception:format=tostring}"
				filter="level >= LogLevel.Warn" />
	</targets>

	<!-- Правила логирования -->
	<rules>
		<!-- Все логи Info и выше → файл -->
		<logger name="*" minlevel="Info" writeTo="allfile" />

		<!-- Ошибки и выше → отдельный файл -->
		<logger name="*" minlevel="Error" writeTo="errorfile,console" />

		<!-- Консоль: показываем только твои логи (WebApp.*), начиная с Info -->
		<logger name="WebApp.*" minlevel="Info" writeTo="console" />

		<!-- (Отключаем шумные системные логи для консоли) -->
		<logger name="Microsoft.*" minlevel="Off" final="true" />
		<logger name="System.*" minlevel="Off" final="true" />
	</rules>
</nlog>